<%= form_with model: @user do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>

  <%= form.label :username, "Your user name here:"%>
  <%= form.text_field(:username, value: "john_doe") %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Submit" %>
<% end %>