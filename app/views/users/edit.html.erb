<h1>Edit User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @user do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>

  <%= form.label :username, "Your user name here:"%>
  <%= form.text_field(:username, value: "john_doe") %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Submit" %>
<% end %>